{
	"name": "abuseio/abuseio",
	"description": "Open Source abusemanagement tool",
	"version": "4.0.0-alpha2",
	"keywords": ["abuse", "abuseio"],
	"homepage": "http://abuse.io",
	"type": "project",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "AbuseIO Foundation",
			"email": "dev@abuse.io",
			"homepage": "http://abuse.io",
			"role": "Lead"
		}
	],
    "extra": {
        "branch-alias": {
            "dev-master": "4.0-dev"
        }
    },
	"support": {
		"email": "dev@abuse.io",
		"issues": "https://github.com/AbuseIO/AbuseIO/issues",
		"irc": "irc://irc.freenode.net/abuseio",
		"source": "https://github.com/AbuseIO/AbuseIO",
		"docs": "https://abuse.io/resources/documentation/"
	},
    "suggest": {
        "ext-mcrypt": "Laravel / AbuseIO requirement"
    },
	"require": {
        "ext-mcrypt": "*",
		"laravel/framework": "5.1.*",
        "laravelcollective/html": "~5.0",
        "php-mime-mail-parser/php-mime-mail-parser": "2.1.4",
        "webpatser/laravel-uuid": "1.*",
        "Chumper/Zipper": "0.6.x",
        "barryvdh/laravel-ide-helper": "^2.0",
        "ddeboer/data-import": "^0.18.0",
        "yajra/laravel-datatables-oracle": "~5.0",
        "guzzlehttp/guzzle": "6.1.1",
        "marknl/iodef": "dev-master",

        "abuseio/parser-common": "1.1.*",
		"abuseio/parser-abusehub": "1.1.*",
		"abuseio/parser-blocklistde": "1.1.*",
		"abuseio/parser-cegtek": "1.1.*",
		"abuseio/parser-cleanmx": "1.1.*",
        "abuseio/parser-copyrightcompliance": "1.1.*",
		"abuseio/parser-cyscon": "1.1.*",
		"abuseio/parser-dnsblde": "1.1.*",
		"abuseio/parser-google": "1.1.*",
		"abuseio/parser-iecccom": "1.1.*",
		"abuseio/parser-ipechelon": "1.1.*",
		"abuseio/parser-junkemailfilter": "1.1.*",
        "abuseio/parser-juno": "1.1.*",
		"abuseio/parser-netcraft": "1.1.*",
		"abuseio/parser-projecthoneypot": "1.1.*",
		"abuseio/parser-shadowserver": "1.1.*",
		"abuseio/parser-spamcop": "1.1.*",
		"abuseio/parser-spamexperts": "1.1.*",
		"abuseio/parser-usgo": "1.1.*",
		"abuseio/parser-webiron": "1.1.*",
        "abuseio/parser-woody": "1.1.*",

        "abuseio/collector-common": "1.1.*",
        "abuseio/collector-rbl": "1.1.*",
        "abuseio/collector-snds": "1.1.*",

        "abuseio/notification-common": "1.1.*",
        "abuseio/notification-mail": "1.1.*",
		"zendframework/zend-xmlrpc": "^2.5"

	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database",
            "vendor/abuseio/",
            "app/Libraries/"
		],
		"psr-4": {
			"AbuseIO\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
            "php artisan queue:restart"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
            "php artisan ide-helper:generate",
			"php artisan optimize",
            "php artisan queue:restart"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate",
            "php artisan app:id"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
