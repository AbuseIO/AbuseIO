	"autoload": {
		"classmap": [
			"database",
			"vendor/abuseio/",
			"database/seeds",
			"database/factories"
		],
		"psr-4": {
			"AbuseIO\\": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"tests\\": "tests/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@fix-packages-without-forking",
			"php artisan clear-compiled",
			"php artisan queue:restart"
		],
		"post-update-cmd": [
			"@fix-packages-without-forking",
			"php artisan clear-compiled",
			"php artisan ide-helper:generate",
			"php artisan queue:restart"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate",
			"php artisan app:id"
		],
		"post-autoload-dump": [
			"@fix-packages-without-forking",
			"Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
			"@php artisan package:discover"
		],
		"fix-packages-without-forking" : [
			"echo 'Fix AbuseIO modules: ClassMapGenerator moved to Composer\\ClassMapGenerator\\ClassMapGenerator'",
			"find vendor/abuseio/*-common/src -name '*.php' -type f -print0 | xargs -0 sed -i 's/use Composer\\\\Autoload\\\\ClassMapGenerator;/use Composer\\\\ClassMapGenerator\\\\ClassMapGenerator;/g'",
			"grep -r ClassMapGenerator\\; vendor/abuseio/*-common/src",

			"echo 'Fix Jover/Singleton: magic wakeup method must be declared public'",
			"find vendor/jover/singleton/src/* -type f -print0 | xargs -0 sed -i 's/protected function __wakeup/public function __wakeup/g'",
			"grep -r __ vendor/jover/singleton/src"
		]
	},
	"config": {
		"preferred-install": "dist",
		"sort-packages": true,
		"optimize-autoloader": true
	},
	"extra": {
		"branch-alias": {
			"dev-master": "4.1.x-dev"
		}
	},
	"minimum-stability": "stable"
}
